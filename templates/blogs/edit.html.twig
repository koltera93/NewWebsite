{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="example-wrapper">
            <div class="form-group">
                {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}

                {{ form_row(form.name) }}

                {{ form_row(form.text) }}
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}