{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block head %}
   <h3><a href="{{ path('homepage') }}">На главную</a></h3>
{% endblock %}

{% block body %}

    <style>
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        body {background-color: #999999 }
    </style>

    <div class="card">
        <div class="card-header">
            <h2>{{ blog.name }}</h2>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-3">
                <p>{{ blog.text }}</p>
                <footer class="blockquote-footer">Создано -<cite>{{ blog.date|date("D M j G:i:s T Y") }}</cite></footer>
            </blockquote>

            <h3>Ваши комментарии</h3>

            {% for comments in blog.comment  %}
               <h5><a>{{ comments.nickname }}</a><br></h5>
                <a>{{ comments.comment|nl2br }}</a><br>
                <a>{{ comments.date|date("D M j G:i:s Y") }}</a>
            {% endfor %}


            <h3>Прокомментируйте запись</h3>
        <div class="example-wrapper">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Добавить комментарий</button>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>

        <a href="{{ path('homepage') }}">На главную</a>
    </div>
{% endblock %}